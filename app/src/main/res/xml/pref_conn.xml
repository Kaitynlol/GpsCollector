<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/header_connection_fragment">
        <EditTextPreference
            android:key="server_url"
            android:summary="Connection to..."
            android:title="Server"
            android:defaultValue="@string/server_ip" />
        <EditTextPreference
            android:key="server_url_create_user"
            android:summary="Url for creating user."
            android:title="Create user URL"
            android:defaultValue="@string/server_ip_user_create" />


        <ListPreference
            android:defaultValue="5"
            android:title="Synchronisation time"
            android:entries="@array/pref_sync_frequency_titles"
            android:entryValues="@array/pref_sync_frequency_values"
            android:key="sync_time" />
    </PreferenceCategory>


</PreferenceScreen>